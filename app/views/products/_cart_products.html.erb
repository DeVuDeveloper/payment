<%= turbo_frame_tag "cart_product_#{product.id}" do %>
  <div id="<%= "cart-#{product.id}" %>" class="p-4">
    <div class="flex items-center mb-4">
      <%= image_tag product.image, class: "w-96 object-contain rounded-lg mr-4" %>
      <div class="flex-1">
        <%= button_to(
  product_remove_from_cart_path(product),
  method: :delete,
  remote: true,
  class: "text-gray-600 hover:text-red-500 remove-from-cart",
  data: { product_id: product.id },

) do %>
          <i class="fas fa-trash"></i>
        <% end %>
        <div class="flex items-center">
          <%= button_to(add_to_cart_product_path(product, quantity: -1), method: :post, remote: true, class: "text-gray-600 hover:text-red-500 decrease-quantity") do %>
            <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" />
              <path d="M5 13h14v-2H5z" fill="white"/>
            </svg>
          <% end %>
          <%= turbo_frame_tag "quantity_#{product.id}" do %>
            <%= render 'cart_product_quantity', product: product %>
          <% end %>
          <%= button_to(add_to_cart_product_path(product, quantity: 1), method: :post, remote: true, class: "text-gray-600 hover:text-red-500 increase-quantity", params: { turbo_frame: 'cart_products' }) do %>
            <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"/>
            </svg>
          <% end %>
        </div>
        <h2 class="text-lg font-bold"><%= product.name %></h2>
        <span id="price_<%= product.id %>" class="text-gray-600">$<%= product.price %></span>
      </div>
    </div>
  </div>
<% end %>
