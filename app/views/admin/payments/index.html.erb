<%= turbo_stream_from "transactions" %>

<div class="bg-gray-800 pt-3">
  <div class="rounded-tl-3xl bg-gradient-to-r from-gray-900 to-gray-800 p-4 shadow text-white">
    <div class="flex items-center justify-between">
      <h2 class="font-bold pl-2 text-2xl"><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="container mx-auto mt-1">
  <div class="flex justify-center">
    <div class="w-full">
      <div class="table-container">
        <ul class="w-full user-list">
          <li class="bg-gray-900 text-gray-500 p-3 flex font-bold flex-col md:flex-row gap-4 sm:justify-between border-b border-gray-700 text-gray-300">
            <span class="w-full sm:w-1/6">Created At</span>
            <span class="w-full sm:w-1/6">ID</span>
            <span class="w-full sm:w-1/6">Type</span>
            <span class="w-full sm:w-1/6">Last 4 digits</span>
            <span class="w-full sm:w-1/6">Amount</span>
            <span class="w-full sm:w-1/6">Status</span>
          </li>
            <%= turbo_frame_tag 'transactions' do %>
            <%= render 'payment', transactions: @transactions %>
  
          <% end %>
        </ul>
      </div>
    
    </div>
  </div>
</div>