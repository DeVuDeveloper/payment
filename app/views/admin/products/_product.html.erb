<%= turbo_frame_tag product do %>
  <li class="bg-gray-800 border-b border-gray-200 text-gray-400 p-3 flex">
    <span class="w-full sm:w-1/3 pr-4"><%= product.name %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= product.price %></span>
    <span class="w-full sm:w-1/3 flex space-x-4">
      <%= link_to edit_admin_product_path(product), class: 'text-blue-600 hover:text-blue-800' do %>
        <i class="material-icons-outlined text-base">edit</i>
      <% end %>
      <%= button_to admin_product_path(product), method: :delete, class: 'text-red-600 hover:text-red-800' do %>
        <i class="material-icons-outlined text-base">delete</i>
      <% end %>
    </span>
  </li>
<% end %>
